<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/all_item"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Data_Image_Product"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:src="@mipmap/iphone_15_pro_max" />

    <TextView
        android:id="@+id/Data_Name_Product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:baselineAligned="false"
        android:text="iPhone 15 Pro Max"
        android:textColor="@color/Dark"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Data_Price_Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.990.000"
            android:textColor="@color/Link"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Data_Price_Product"
            android:text=" Ä‘"
            android:textColor="@color/Link"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>