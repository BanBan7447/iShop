<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Customers.Page_Fix_Profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/Light"
        android:id="@+id/Title_Page">

        <ImageView
            android:id="@+id/Icon_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:rotation="180"/>

        <TextView
            android:id="@+id/TT_Code_Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa hồ sơ"
            android:textColor="@color/Dark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Icon_Back"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/Title_Page">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:text="Tên người nhận"
            android:textSize="20dp"
            android:textColor="@color/Dark"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/EdtFix_Name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:padding="14dp"
            android:hint="Nhập họ tên"
            android:textSize="18dp"
            android:background="@drawable/stroke_raidus_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:text="Số điện thoại"
            android:textSize="20dp"
            android:textColor="@color/Dark"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/EdtFix_SDT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:padding="14dp"
            android:hint="Nhập số điện thoại"
            android:textSize="18dp"
            android:background="@drawable/stroke_raidus_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="@color/Dark"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/EdtFix_Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:padding="14dp"
            android:hint="Nhập email"
            android:textSize="18dp"
            android:background="@drawable/stroke_raidus_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:text="Địa chỉ:"
            android:textSize="20dp"
            android:textColor="@color/Dark"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/EdtFix_Location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:hint="Nhâập địa chỉ giao hàng"
            android:textSize="18dp"
            android:background="@drawable/stroke_raidus_16"
            android:singleLine="true"
            android:scrollHorizontally="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/Btn_Fix_Profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:text="Xác nhận"
        android:textSize="20dp"
        android:background="@drawable/fill_radius_16"
        app:backgroundTint="@color/Link"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>