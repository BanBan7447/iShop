<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Manage.Page_Create_Bill"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Title_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/Light">

        <ImageView
            android:id="@+id/Icon_Back_CreateBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:rotation="180"/>

        <TextView
            android:id="@+id/TT_Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xử lý đơn hàng"
            android:textColor="@color/Dark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Icon_Back_CreateBill"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/TT_Code_Bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã hóa đơn: "
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Code_Bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HD0000"
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:layout_toRightOf="@+id/TT_Code_Bill"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/TT_Code_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã đơn hàng: "
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Code_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HD0000"
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:layout_toRightOf="@+id/TT_Code_Orders"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/TT_Date_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian đặt hàng: "
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Date_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/TT_Date_Orders"
                    android:text="14/07/2024"
                    android:textColor="@color/Dark"
                    android:textSize="24dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TT_Employee_CreateBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhân viên xử lý: "
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Name_Employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nghiêu Thanh Phong"
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:layout_below="@+id/TT_Employee_CreateBill"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/Line"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin người nhận"
                android:layout_marginBottom="4dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người nhận:"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Customer_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghiêu Thanh Phong"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Customer_SDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0774747744"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Customer_Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="95/12 đường Nguyễn Tấn Thành phường Tân Quy Quận 174"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Payment_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiền mặt khi nhận hàng"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/Line"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_create_Bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/Line"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin thanh toán"
                android:textSize="20dp"
                android:textColor="@color/Dark"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/TT_Sum_Quantity_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số lượng sản phẩm:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Sum_Quantity_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/TT_Total_Price_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền đơn hàng:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Total_Price_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_toLeftOf="@+id/VND_1"/>

                <TextView
                    android:id="@+id/VND_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/TT_Delivery_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí vận chuyển:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Delivery_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_toLeftOf="@+id/VND_2"/>

                <TextView
                    android:id="@+id/VND_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom">

                <TextView
                    android:id="@+id/TT_Total_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/Data_Total_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_toLeftOf="@+id/VND_3"/>

                <TextView
                    android:id="@+id/VND_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <Button
                android:id="@+id/Btn_Create_Bill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="Xuất hóa đơn"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/Light"
                android:background="@drawable/fill_radius_16"
                app:backgroundTint="@color/Link"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>