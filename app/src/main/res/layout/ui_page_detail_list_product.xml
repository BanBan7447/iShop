<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Customers.Page_Detail_List_Product"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Light"
            android:padding="20dp">

            <ImageView
                android:id="@+id/Icon_Back_Product_User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/Name_Product_Type_User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Icon_Back_Product_User"
                android:paddingLeft="12dp"
                android:text="Iphone"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <SearchView
            android:id="@+id/Search_Orders"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/stroke_raidus_16"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Tìm kiếm đơn hàng" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_product_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

</ScrollView>