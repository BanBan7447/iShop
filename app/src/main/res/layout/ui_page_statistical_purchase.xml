<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Manager.Page_Statistical_Purchase"
    android:orientation="vertical"
    android:background="@color/Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/Light">

        <ImageView
            android:id="@+id/Icon_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:rotation="180"/>

        <TextView
            android:id="@+id/Title_Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê mua hàng"
            android:textColor="@color/Dark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Icon_Back"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng số đơn hàng đã đặt:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/Dark"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/Data_Total_Sell_Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.000.000.000"
            android:textSize="24dp"
            android:textColor="@color/Link"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" đơn"
            android:textSize="24dp"
            android:textColor="@color/Link"
            android:textStyle="bold"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="Chọn thời gian thống kê"
        android:textColor="@color/Dark"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="@drawable/fill_radius_16"
        app:backgroundTint="#E3E3E3"/>

    <TextView
        android:id="@+id/myDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="14/07/2024"
        android:textStyle="bold"
        android:textColor="@color/Dark"
        android:textSize="24dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số đơn hàng đã đặt:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/Dark"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/Data_Sell_Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.000.000.000"
            android:textSize="24dp"
            android:textColor="@color/Link"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" đơn"
            android:textSize="24dp"
            android:textColor="@color/Link"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu từ số đơn hàng:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/Dark"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/Data_Revenue_Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.000.000.000"
            android:textSize="24dp"
            android:textColor="@color/Link"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" đơn"
            android:textSize="24dp"
            android:textColor="@color/Link"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>