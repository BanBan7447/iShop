<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Customers.Fragment_Page_TypeC.FragPage_Home"
    android:background="@color/Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/Light"
            app:logo="@drawable/icon_logo_app"
            app:title="iShop"
            app:titleMarginStart="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_Select_All"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Tất cả"
                android:textSize="18dp"
                android:textColor="@color/Dark"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/fill_radius_16"
                android:backgroundTint="@color/PaleWhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPad"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mac"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple Watch"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>