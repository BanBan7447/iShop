<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Customers.Fragment_Page_TypeC.FragPage_Home"
    android:orientation="vertical"
    android:background="@color/Light">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Light"
        app:logo="@drawable/icon_logo_app"
        app:title="iShop"
        app:titleMarginStart="30dp"/>

    <RelativeLayout
        android:id="@+id/Heading_Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/Logo_App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logo_app"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iShop"
            android:textSize="18dp"
            android:textColor="@color/Dark"
            android:fontFamily="@font/karla_bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/Logo_App"/>
    </RelativeLayout>


</LinearLayout>