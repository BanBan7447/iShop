<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Customers.Page_Payment"
    android:orientation="vertical"
    android:background="@color/Light">

    <RelativeLayout
        android:id="@+id/Title_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/Light">

        <ImageView
            android:id="@+id/Icon_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:rotation="180"/>

        <TextView
            android:id="@+id/TT_Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán đơn hàng"
            android:textColor="@color/Dark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Icon_Back"
            android:paddingLeft="12dp"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title_Page"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Light"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TT_Code_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã đơn hàng: "
                    android:textSize="18dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Code_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HD0000"
                    android:textSize="18dp"
                    android:textColor="@color/Dark"
                    android:layout_toRightOf="@+id/TT_Code_Orders"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/Data_Location_Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:drawableLeft="@drawable/icon_location_white"
                android:drawablePadding="8dp"
                android:text="95 Trần Thiện Chánh, Phường 12, Quận 10"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/Light"
                android:padding="10dp"
                android:background="@drawable/fill_radius_16"
                android:backgroundTint="@color/Dark"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin thanh toán"
                android:textSize="20dp"
                android:textColor="@color/Dark"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom">

                <TextView
                    android:id="@+id/TT_Sum_Quantity_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số lượng sản phẩm:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/Data_Sum_Quantity_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom">

                <TextView
                    android:id="@+id/TT_Total_Price_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền đơn hàng:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/Data_Total_Price_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_toLeftOf="@+id/VND_1"/>

                <TextView
                    android:id="@+id/VND_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom">

                <TextView
                    android:id="@+id/TT_Delivery_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí vận chuyển:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/Data_Delivery_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_toLeftOf="@+id/VND_2"/>

                <TextView
                    android:id="@+id/VND_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Light"
        android:layout_alignParentBottom="true"
        android:padding="15dp">

        <TextView
            android:id="@+id/TT_Total_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textColor="@color/Dark"
            android:textStyle="bold"
            android:textSize="18dp"/>
        
        <TextView
            android:id="@+id/Data_Total_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.140.090.000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/Link"
            android:layout_below="@+id/TT_Total_Price"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="18dp"
            android:background="@drawable/fill_radius_16"
            app:backgroundTint="@color/Link"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>