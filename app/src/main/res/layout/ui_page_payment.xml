<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Type_Customers.Page_Payment"
    android:orientation="vertical"
    android:background="@color/Light">

    <RelativeLayout
        android:id="@+id/Title_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/Light">

        <ImageView
            android:id="@+id/Icon_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:rotation="180"/>

        <TextView
            android:id="@+id/TT_Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận đơn hàng"
            android:textColor="@color/Dark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Icon_Back"
            android:paddingLeft="12dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title_Page"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Light"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/TT_Code_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã đơn hàng: "
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Code_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HD0000"
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:layout_toRightOf="@+id/TT_Code_Orders"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TT_Date_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian đặt hàng: "
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Date_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/07/2024"
                    android:textSize="24dp"
                    android:textColor="@color/Dark"
                    android:layout_toRightOf="@+id/TT_Date_Orders"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/Line"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin người nhận"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/Dark"/>

                <ImageButton
                    android:id="@+id/BtnFix_Info_Customer_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_blue_fix"
                    android:background="@color/Light"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người nhận:"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Customer_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghiêu Thanh Phong"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Customer_SDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0774747744"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Customer_Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="95/12 đường Nguyễn Tấn Thành phường Tân Quy Quận 174"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textStyle="bold"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/Data_Payment_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiền mặt khi nhận hàng"
                android:textColor="@color/Dark"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/Line"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/Dark"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="14dp"
                android:id="@+id/rcv_list_product_u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@color/Line"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin thanh toán"
                android:textSize="20dp"
                android:textColor="@color/Dark"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/TT_Sum_Quantity_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số lượng sản phẩm:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Sum_Quantity_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_bottom"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/TT_Total_Price_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền đơn hàng:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Total_Price_Orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_toLeftOf="@+id/VND_1"/>

                <TextView
                    android:id="@+id/VND_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/TT_Delivery_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí vận chuyển:"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Data_Delivery_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_toLeftOf="@+id/VND_2"/>

                <TextView
                    android:id="@+id/VND_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" đ"
                    android:textSize="16dp"
                    android:textColor="@color/Dark"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Light"
        android:layout_alignParentBottom="true"
        android:padding="15dp">

        <TextView
            android:id="@+id/TT_Total_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textColor="@color/Dark"
            android:textStyle="bold"
            android:textSize="18dp"/>
        
        <TextView
            android:id="@+id/Data_Total_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.140.090.000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/Link"
            android:layout_below="@+id/TT_Total_Price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/Link"
            android:layout_below="@+id/TT_Total_Price"
            android:layout_toRightOf="@+id/Data_Total_Price"/>

        <Button
            android:id="@+id/Btn_Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="18dp"
            android:background="@drawable/fill_radius_16"
            app:backgroundTint="@color/Link"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>